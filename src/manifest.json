{
  "name": "INO - In and out",
  "description": "Speed up your web development process!",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_icon": {
      "16": "/images/logo_16.png",
      "32": "/images/logo_32.png",
      "48": "/images/logo_48.png",
      "128": "/images/logo_128.png"
    },
    "default_title": "Click me to generate snapshots!"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["https://*/*"],
  "web_accessible_resources": [
    { "resources": ["popup.html"], "matches": ["https://*/*"] },
    { "resources": ["popup.css"], "matches": ["https://*/*"] },
    { "resources": ["popup.js"], "matches": ["https://*/*"] },
    { "resources": ["/images/logo_48.png"], "matches": ["https://*/*"] },
    { "resources": ["/fonts/*.ttf"], "matches": ["https://*/*"] }
  ]
}
